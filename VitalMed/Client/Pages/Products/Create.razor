@page "/products/create/"
@inject HttpClient _client
@inject NavigationManager _navManager


<h3 class="card-title">Add new Products</h3>
<hr/>
<br/>

<FormComponent ButtonText="Create Product" product="product" OnValidSubmit="@AddProduct" />

@code {
    private List<Product> Products;

    Product product = new Product();

    private async Task AddProduct()
    {
        await _client.PostAsJsonAsync(Endpoints.ProductsEndpoint, product);
        _navManager.NavigateTo("/products/");
    }
}
